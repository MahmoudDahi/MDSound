<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/image_album_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:scaleType="centerCrop"
        android:layout_alignBottom="@id/control_notification"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/app_name_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/app_name"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/notification_title"
        style="@style/TextAppearance.Compat.Notification.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_name_notification"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAlignment="viewStart"
        tools:text="notification Title" />

    <TextView
        android:id="@+id/notification_text"
        style="@style/TextAppearance.Compat.Notification.Line2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/notification_title"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAlignment="viewStart"
        tools:text="notification Title" />

    <LinearLayout
        android:id="@+id/control_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/notification_text"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/prev_notification"
            android:layout_width="@dimen/image_notification_dimen"
            android:layout_height="@dimen/image_notification_dimen"
            android:padding="8dp"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/pause_notification"
            android:layout_width="@dimen/image_notification_dimen"
            android:layout_height="@dimen/image_notification_dimen"
            android:padding="8dp"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/next_notification"
            android:layout_width="@dimen/image_notification_dimen"
            android:layout_height="@dimen/image_notification_dimen"
            android:padding="8dp"
            tools:ignore="ContentDescription" />
    </LinearLayout>

</RelativeLayout>